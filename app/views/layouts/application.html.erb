<!DOCTYPE html>
<html>
  <head>
    <title>Glaze</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%=url_for(user_top_path)%>">Glaze</a>
  </div>
</nav>

      <header>
    <% if user_signed_in? %>
      <li>
        <%= link_to "計算ページ", user_top_path %>
      </li>
      <li>
        <%= link_to "みんなの配合", calculations_path %>
      </li>
      <li>
        <%= link_to "マイページ", user_path(current_user) %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% elsif admin_signed_in? %>
      <li>
        <%= link_to "計算一覧", admin_calculations_path %>
      </li>
      <li>
        <%= link_to "タグ一覧", admin_tags_index_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
      <li>
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
        </li>
    <% end %>
  </header>

    <%= yield %>
  </body>
</html>
