<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
        <h3 style="background-color: #17a2b8; color: white; font-weight: bold; padding: 5px;">タグ編集画面</h3>

      <%= form_with(model: @tag, method: :patch, url: admin_tag_path(@tag), class: "form") do |f| %>
        <div class="form-group">
          <%= f.label :tag_name, 'タグ名' %>
          <%= f.text_field :tag_name, autofocus: true, autocomplete: 'off', class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit '更新', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>