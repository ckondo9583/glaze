<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h3 style="background-color: #17a2b8; color: white; font-weight: bold; padding: 5px;">タグの追加</h3>
      
      <%= form_with(model: @tag, method: :post, url: admin_tags_path, class: "form") do |f| %>

        <div class="form-group">
          <%= f.label :tag_name, 'タグ名' %>
          <%= f.text_field :tag_name, autofocus: true, autocomplete: 'off', class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit '追加', class: "btn btn-primary" %>
        </div>
      <% end %>
      
 <div class="mt-3">       
 <h3 style="background-color: #17a2b8; color: white; font-weight: bold; padding: 5px;">タグ一覧</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>タグ名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.tag_name %></td>
              <td><%= link_to '編集', edit_admin_tag_path(tag), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to '削除', admin_tag_path(tag), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
     </div>
    </div>
  </div>
</div>