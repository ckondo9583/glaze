<h1>Admin::Tags#index</h1>
<p>Find me in app/views/admin/tags/index.html.erb</p>




<%= form_with(model: @tag, method: :post, url: admin_tags_path) do |f| %>
  <div class="form-group">
    <%= f.label :tag_name, 'タグ名' %>
    <%= f.text_field :tag_name, autofocus: true, autocomplete: 'off' %>
    <%= f.submit '追加' %>
  </div>
<% end %>

<% @tags.each do |tag| %>
<li> <%= tag.tag_name %> <%= link_to '編集', edit_admin_tag_path(tag) %><%= link_to '削除', admin_tag_path(tag), method: :delete, data: { confirm: '本当に削除しますか？' } %>
</li> <% end %>