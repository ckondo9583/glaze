<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      
      <h3 style="background-color: #17a2b8; color: white; font-weight: bold; padding: 5px;"><%= @user.name %>のページ</h3>
      

  <table class="table table-striped">
        <tbody>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td colspan="2"><p><%= @user.introduction %></p></td>
          </tr>
        </tbody>
      </table>
      
      <div style="text-align: center;">
        <%= link_to "編集", edit_admin_user_path, class: "btn btn-info" %>
      </div>
      
      <div class="mt-3">   
      <h3 style="background-color: #17a2b8; color: white; font-weight: bold; padding: 5px;">計算一覧</h3>
      <table class="table table-striped">
        <thead> <!-- テーブルの見出し部分 -->
          <tr>
            <th>タイトル</th>
            <th>サブタイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @calculations.each do |calculation| %>
            <tr>
              <td><%= link_to calculation.title, admin_calculation_path(calculation) %></td>
              <td><%= calculation.subtitle %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>